// Base class Person
class Person {
    String name;
    int id;
 
    // Constructor to initialize name and id
    public Person(String name, int id) {
        this.name = name;
        this.id = id;
    }
 
    // Method to display person's name and ID
    public void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("ID: " + id);
    }
}
 
// Subclass Student extending Person
class Student extends Person {
    String gradeLevel;
 
    // Constructor for Student, calling super() for Person's constructor
    public Student(String name, int id, String gradeLevel) {
        super(name, id); // Calls the Person constructor
        this.gradeLevel = gradeLevel;
    }
 
    // Overriding displayInfo() to include grade level
    @Override
    public void displayInfo() {
        super.displayInfo(); // Calls the Person's displayInfo()
        System.out.println("Grade Level: " + gradeLevel);
    }
}
 
// Subclass Teacher extending Person
class Teacher extends Person {
    String subject;
 
    // Constructor for Teacher, calling super() for Person's constructor
    public Teacher(String name, int id, String subject) {
        super(name, id); // Calls the Person constructor
        this.subject = subject;
    }
 
    // Overriding displayInfo() to include subject
    @Override
    public void displayInfo() {
        super.displayInfo(); // Calls the Person's displayInfo()
        System.out.println("Subject: " + subject);
    }
}
 
// Subclass Staff extending Person
class Staff extends Person {
    String department;
 
    // Constructor for Staff, calling super() for Person's constructor
    public Staff(String name, int id, String department) {
        super(name, id); // Calls the Person constructor
        this.department = department;
    }
 
    // Overriding displayInfo() to include department
    @Override
    public void displayInfo() {
        super.displayInfo(); // Calls the Person's displayInfo()
        System.out.println("Department: " + department);
    }
}
 
// Main class SchoolTest
public class SchoolTest {
    public static void main(String[] args) {
        // Creating objects of Student, Teacher, and Staff
        Student student = new Student("Alice", 101, "10th Grade");
        Teacher teacher = new Teacher("Bob", 201, "Mathematics");
        Staff staff = new Staff("Charlie", 301, "Administration");
 
        // Calling displayInfo() for each object
        System.out.println("Student Information:");
        student.displayInfo();
        System.out.println("\nTeacher Information:");
        teacher.displayInfo();
        System.out.println("\nStaff Information:");
        staff.displayInfo();
    }
}
 
